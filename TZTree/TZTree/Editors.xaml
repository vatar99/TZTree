<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             x:Class="TZTree.Editors"
             Title="Задание Editor">
    <ContentPage.Content>
        <StackLayout Padding="12,12,12,12">
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Slider x:Name="Slider" Minimum="0" Maximum="100" Value="10" ValueChanged="Slider_ValueChanged" HorizontalOptions="FillAndExpand"></Slider>
                <Stepper x:Name="Stepper" Minimum="0" Maximum="100" Value="10" Increment="2" ValueChanged="Stepper_ValueChanged" HorizontalOptions="End"></Stepper>

            </StackLayout>
            <Editor x:Name="Editor1" Text="Задание Editor" VerticalOptions="FillAndExpand"></Editor>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>